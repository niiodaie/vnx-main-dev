{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",                     // ðŸ‘ˆ Required for path aliases
    "paths": {
      "@/*": ["src/*"]                  // ðŸ‘ˆ Path alias definition
    }
  },
  "include": ["src"]
}
